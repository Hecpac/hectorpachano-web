---
import '../base.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Hector Pachano - Arquitecto de Sistemas GSEO & Marketing Predictivo" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-rich-black text-white selection:bg-primary-glow-start selection:text-white">
		<slot />
	</body>
</html>
